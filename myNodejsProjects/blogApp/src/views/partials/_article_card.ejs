<% 
let height = ''
//If index is undefined, only one article is shown
if (index == undefined) {
  height = '600'
//If index is not undefined, all article is shown
} else {
  const mode = index %10

  if (mode===0) {
    height='600'
  }else{
    height = "60"+mode
  }

  
}
%> 

<div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
        <img src="https://source.unsplash.com/random/800x <%= height  %> " alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://source.unsplash.com/random/800x <%= height  %>" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%- article.title.rendered %> </p>
        </div>
      </div>
  
      <div class="content">


          <% let articleContent = article.excerpt.rendered
             let summary = articleContent.slice(0,50)
          %> 
        <%- index==undefined ? article.content.rendered : summary %>

        <% if (index!==undefined) { %>
          <a href="/blog/<%=article.id%>"> <br> Read more...</a>
        <% } %>
      </div>
    </div>
  </div>